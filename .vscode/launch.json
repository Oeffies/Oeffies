{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Backend",
      "sourceMaps": true,
      "preLaunchTask": "Prepare Backend",
      "cwd": "${workspaceRoot}/backend",
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "start:dev"
      ],
      "env": {
        "VRR_BASE_URL": "http://127.0.0.1:3100"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Frontend",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceRoot}/frontend/src",
      "sourceMaps": true,
      "preLaunchTask": "Frontend (watch)"
    },
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "name": "Backend Tests",
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "args": [
        "run-script",
        "test"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "name": "Frontend Tests",
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}/frontend",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "args": [
        "run-script",
        "test"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run delay crawler",
      "program": "${workspaceFolder}/crawlers/dist/",
      "preLaunchTask": "Crawlers (watch)",
      "args": [
        "delays",
        "--stopId",
        "${input:stopId}",
        "--limit",
        "${input:limit}"
      ],
      "env": {
        "pgHost": "localhost",
        "pgPort": "5432",
        "pgUser": "postgres",
        "pgPassword": "postgres",
        "pgDatabase": "postgres"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run timetable crawler",
      "program": "${workspaceFolder}/crawlers/dist/",
      "preLaunchTask": "Crawlers (watch)",
      "args": [
        "import-vrr-timetable",
        "--folder",
        "${input:gtfsFolder}"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": [
        "Backend",
        "Frontend"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
  ],
  "inputs": [
    {
      "id": "stopId",
      "type": "promptString",
      "description": "Stop ID"
    },
    {
      "id": "limit",
      "type": "promptString",
      "description": "Limit"
    },
    {
      "id": "gtfsFolder",
      "type": "promptString",
      "description": "GTFS folder to import from"
    }
  ]
}
