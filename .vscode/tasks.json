{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build vrr_client",
      "type": "npm",
      "script": "build:watch",
      "path": "vrr_client",
      "group": {
        "kind": "build"
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watchers"
      }
    },
    {
      "label": "Frontend (watch)",
      "type": "npm",
      "script": "dev",
      "path": "frontend",
      "group": {
        "kind": "build"
      },
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "###NOTHING###",
          "endsPattern": ".*"
        },
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      },
      "isBackground": true,
      "presentation": {
        "group": "watchers"
      }
    },
    {
      "label": "Open Cypress",
      "type": "npm",
      "script": "cypress:open",
      "path": "e2e",
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*cypress:open.*",
          "endsPattern": ".*cypress open.*"
        },
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      },
      "isBackground": true,
      "presentation": {
        "group": "watchers"
      }
    },
    {
      "label": "Prepare Backend",
      "dependsOn": [
        "Build vrr_client",
        "Mocks Server",
      ]
    },
    {
      "label": "Mocks Server",
      "type": "npm",
      "script": "mocks-server",
      "path": "e2e",
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*mocks-server.*",
          "endsPattern": ".*Select action:.*"
        },
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      },
      "isBackground": true,
      "presentation": {
        "group": "watchers"
      }
    }
  ]
}
