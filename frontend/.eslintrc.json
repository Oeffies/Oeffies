{
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "dist/",
    "public/",
    "capacitor.config.ts"
  ],
  "root": true,
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "plugin:react/jsx-runtime",
    "../.eslintrc.json"
  ],
  "parserOptions": {
    "sourceType": "module",
    "project": [
      "tsconfig.json",
      "tsconfig.node.json"
    ],
    "ecmaVersion": 6
  },
  "rules": {
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ]
  }
}
